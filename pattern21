#include<stdio.h> 
int main()
{
   int n;
   scanf("%d",&n);
   int k=1;
   int s=1;
   while(k<=n){
       int space=s;
       while(space>1){
           printf(" ");
           space--;
       }
       int a=n;
       while(a>=k){
           printf("%d",a);
           a--;
       }
       printf("\n");
       k++;
       s++;
   }
}
